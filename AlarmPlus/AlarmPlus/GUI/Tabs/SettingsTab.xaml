<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlarmPlus.GUI.Tabs.SettingsTab"
             Title="Settings">

    <StackLayout  Margin="10">
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Default Nagging Settings">
                    <EntryCell Label="Alarms Before" Text="{Binding AlarmsBeforeString, Mode=TwoWay}" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <EntryCell Label="Alarms After" Text="{Binding AlarmsAfterString, Mode=TwoWay}" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <EntryCell Label="Interval (minutes)" Text="{Binding NaggingIntervalString, Mode=TwoWay}" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                </TableSection>
                <TableSection Title="Default Snooze Settings">
                    <EntryCell Label="Default Interval (minutes)" Text="{Binding SnoozeIntervalString, Mode=TwoWay}" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
    

</ContentPage>