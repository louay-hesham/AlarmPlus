<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlarmPlus.GUI.Tabs.SettingsTab"
             Title="Settings">

    <TableView Intent="Form" Margin="10">
        <TableRoot>
            <TableSection Title="Default Nagging Settings">
                <EntryCell Label="Alarms Before" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                <EntryCell Label="Alarms After" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                <EntryCell Label="Interval (minutes)" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
            </TableSection>
            <TableSection Title="Default Snooze Settings">
                <EntryCell Label="Default Interval (minutes)" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>