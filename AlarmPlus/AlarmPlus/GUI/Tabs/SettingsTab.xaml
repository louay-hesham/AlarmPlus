<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlarmPlus.GUI.Tabs.SettingsTab"
             Title="Settings">

    <StackLayout  Margin="10">
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Default Nagging Settings">
                    <EntryCell x:Name="AlarmsBeforeEntry" Label="Alarms Before" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <EntryCell x:Name="AlarmsAfterEntry" Label="Alarms After" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <EntryCell x:Name="NaggingIntervalEntry" Label="Interval (minutes)" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                </TableSection>
                <TableSection Title="Default Snooze Settings">
                    <EntryCell x:Name="SnoozeIntervalEntry" Label="Default Interval (minutes)" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Save Settings" Clicked="SaveButton_Clicked" />
    </StackLayout>
    

</ContentPage>