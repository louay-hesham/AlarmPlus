<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlarmPlus.GUI.Pages.FiredAlarm"
             Title="{Binding AlarmName}">
    <StackLayout>
        <Label Text="{Binding AlarmTimeString}" Scale="4.0" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center"/>
        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" Margin="20">
            <Button Text="Snooze" Clicked="SnoozeButton_Clicked" BackgroundColor="Red" HorizontalOptions="FillAndExpand"/>
            <Button Text="Close" Clicked="CloseButton_Clicked" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </StackLayout>
</ContentPage>