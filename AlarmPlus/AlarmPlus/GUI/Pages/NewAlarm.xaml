<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlarmPlus.GUI.Pages.NewAlarm"
             xmlns:local="clr-namespace:AlarmPlus.GUI.UIElements"
             Title="New Alarm">

    
    <TableView Intent="Form" Margin="5">
        <TableRoot>
            <TableSection Title="Basic alarm settings">
                <ViewCell>
                    <TimePicker x:Name="AlarmTime" HorizontalOptions="CenterAndExpand" Scale="2" Margin="2"/>
                </ViewCell>
                <EntryCell x:Name="AlarmName" Label="Alarm name   " HorizontalTextAlignment="Center"/>
            </TableSection>
            <TableSection Title="Repeat status">
                <SwitchCell x:Name="AlarmRepeatStatus" Text="Repeat?" OnChanged="RepeatStatusChanged"/>
                <ViewCell>
                    <local:DayPicker x:Name="WeekDay"/>
                </ViewCell>
                <!--<ViewCell>
                    <StackLayout Orientation="Horizontal" x:Name="RepeatitionWeeks" Margin="15,0,15,0">
                        <Label Text="Repeat every " HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center"/>
                        <Entry x:Name="WeeksOfRepeatition" Keyboard="Numeric" Text="1" Completed="WeekRepeatEntered" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand"/>
                        <Label x:Name="WeeksLabel" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center"/>
                    </StackLayout>
                </ViewCell>-->
            </TableSection>
            <TableSection Title="Nagging settings">
                <SwitchCell x:Name="NaggingStatus" Text="Nag with several alarms?" OnChanged="NaggingStatus_OnChanged"/>
                <ViewCell>
                    <local:NaggingSettings x:Name="Nagging"/>
                </ViewCell>
            </TableSection>
            <TableSection>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Margin="15,0,15,0">
                        <Button x:Name="SaveButton" Clicked="SaveButton_Clicked" Text="Save" HorizontalOptions="FillAndExpand" />
                        <Button x:Name="CancelButton" Clicked="CancelButton_Clicked" Text="Cancel" HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>